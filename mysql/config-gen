PASSWORD_SCHEME=$3
echo export VMAIL_USER_HOME_DIR='/var/vmail'
echo export STORAGE_BASE_DIR='/var/vmail'
echo export STORAGE_MAILBOX_DIR='/var/vmail/vmail1'
